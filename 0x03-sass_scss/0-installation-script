# Step 1: Create project directory
mkdir 0x03-sass_scss
cd 0x03-sass_scss

# Step 2: Install NVM (Node Version Manager)
curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/v0.39.7/install.sh | bash

# Step 3: Exit and reopen the terminal
exit
# (Then reopen your terminal)

# Step 4: Install Node.js version 20.16
nvm install 20.16

# Step 5: Verify Node installation
node -v

# Step 6: Install Sass (version 3.7.4)
npm install sass -v 3.7.4

# Step 7: Verify Sass installation
npx sass --version
